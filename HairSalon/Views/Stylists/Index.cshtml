@{
  Layout = "_Layout";
}

<h2>Stylists</h2>
<table class="table">
<tbody>
  @if(Model.Count <= 0)
  {
    <h2>Please add a stylist.</h2>
  }
    @foreach(var stylist in Model)
    {
      <tr>
        <td>@stylist.GetName()</td>
        <td><a href="/stylists/@stylist.GetId()">View Clients</a></td>
      </tr>
    }
</tbody>
</table>
<div>
<a id="biglink" href="/stylists/new">Add New Stylist</a>
</div>
